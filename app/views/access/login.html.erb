<header>
    <h1>Restricted area</h1>
</header>

<div class="section">
    <%= form_tag(:action => 'attempt_login') do %>
    <table>
        <tr>
            <th><%= label_tag(:username) %></th>
            <td><%= text_field_tag(:username) %></td>
        </tr>
        <tr>
            <th><%= label_tag(:password) %></th>
            <td><%= password_field_tag(:password) %></td>
        </tr>
        <tr>
            <th>&nbsp;</th>
            <td><%= submit_tag("Log in") %></td>
        </tr>
    </table>
    <% end %>
</div>
<h1>Projects index</h1>

<%= link_to("Add new project", :action => 'new') %>

<table>
    <tr>
        <th>Project title</th>
        <th>Caption</th>
        <th>Actions</th>
    </tr>
    <% @projects.each do |project| %>
    <tr>
        <td><%= project.title %></td>
        <td><%= project.caption %></td>
        <td>
            <%= link_to("View", {:action => 'show', :id => project.id}) %>
            <%= link_to("Delete", {:action => 'delete', :id => project.id}) %>
        </td>
    </tr>
    <% end %>
</table>

<span class="background"></span>

<header class="index">

	<%= link_to(raw("<h3>Fabiano Paiva</h3>"), {:action => 'index'}, :class => 'logo', :title => 'Fabiano Paiva') %>
	<div class="hero">
		<h2><%= @info.header %></h2>
		<p><%= @info.hero.html_safe %></p>
		<a class="show-btn" title="Show me" href="#SelectedWork">Show me</a>
	</div>

</header>



<section id="AboutMe" class="about">

	<h1>About me</h1>
<div>
	<aside class="picture">
	    <img alt="That's me!" src="/assets/fabiano.png">
	</aside>
	
	<aside class="caption">
		<p class="description"><%= @info.caption %></p>
		<blockquote>
			<p><%= @info.quote %></p>
		</blockquote>
	</aside>
	
	<article>
		<p><%= @info.story.html_safe %></p>
	</article>
</div>
</section>

<hr>

<section class="skills">

	<h1>Skills</h1>

	<article>
		
		<% @skills.each do |skill| %>
			
			<div class="back">
				<div class="level" style="width: <%= skill.level%>%;">
					<div class="value"><%= skill.level %>%</div>
					<div class="skill"><%= skill.skill_name %></div>
				</div>
			</div>
		
		<% end %>

	</article>

</section>

<hr>

<section id="SelectedWork" class="work">

	<h1>Selected Work</h1>

	<div name="work">
		
		<% @projects.each do |project| %>
		
			<aside>
				<%= link_to(image_tag(project.thumbnail, :alt => project.title), {:action => 'show', :id=> project.id}) %>
			</aside>
		
		<% end %>
	
	</div>

</section>